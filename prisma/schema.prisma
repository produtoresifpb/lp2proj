datasource db {
  provider = "sqlite"
  url      = "file:db.db"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id       Int    @id @default(autoincrement())
  email    String @unique
  name     String
  password String
  profile  Int    @default(0)
}

// Type of Profile {
//   PUBLIC - 0
//   ARTIST - 1
//   MANAGER - 2
// }

model Notice {
  id          Int    @id @default(autoincrement())
  title       String @unique
  author      String
  description String
}


model Evento {
  EventoID        Int       @id @default(autoincrement())
  NomeEvento      String
  Descricao       String?
  DataHora        DateTime
  Localizacao     String
  Organizador     String
  InfoIngresso    String?
  ImagemCartaz    String?
  DataPublicacao  DateTime
}
