datasource db {
  provider = "postgresql"
  url      = "postgresql://env(DB_USER):env(DB_PASSWD)@env(DB_HOST):env(DB_PORT)/env(DB_NAME)"
}

generator client {
  provider = "prisma-client-js"
}

enum Profile {
  PUBLIC
  ARTIST
  MANAGER
}

model User {
  id                Int                 @id @default(autoincrement())
  email             String              @unique
  name              String
  password          String
  profile           Profile                 @default(PUBLIC)
  InscricoesEventos InscricoesEventos[]
}



model Notice {
  id          Int    @id @default(autoincrement())
  title       String @unique
  author      String
  description String
}

model Evento {
  EventoID          Int                 @id @default(autoincrement())
  NomeEvento        String
  Descricao         String?
  DataHora          DateTime
  Localizacao       String
  Organizador       String
  InfoIngresso      String?
  ImagemCartaz      String?
  DataPublicacao    DateTime
  InscricoesEventos InscricoesEventos[]
}

model InscricoesEventos {
  InscricaoEventoID Int      @id @default(autoincrement())
  Evento            Evento   @relation(fields: [EventoID], references: [EventoID])
  EventoID          Int
  Usuario           User     @relation(fields: [UsuarioID], references: [id])
  UsuarioID         Int
  DataInscricao     DateTime
}

model ProjetosColaborativos {
  ProjetoID             Int      @id @default(autoincrement())
  Titulo                String
  Descricao             String
  AreaAtuacaoNecessaria String
  Localizacao           String?
  TipoColaboracao       String
  CriadorID             Int
  DataCriacao           DateTime 
}
